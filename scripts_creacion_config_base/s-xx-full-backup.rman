# SCRIPT RMAN: FULL BACKUP (Base de Datos + Archivelogs)
# -----------------------------------------------------------

RUN {
    BACKUP DATABASE TAG 'FULL_DB_BACKUP';
            
    BACKUP ARCHIVELOG ALL DELETE INPUT TAG 'FULL_ARCHIVELOGS_CLEANUP'; 
        
    DELETE NOPROMPT OBSOLETE;
}

EXIT;